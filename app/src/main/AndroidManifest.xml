<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.chizography.droid.whosfirst" >

    <application
        android:hardwareAccelerated="false"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="net.chizography.droid.whosfirst.MainActivity"
            android:label="@string/homescreen_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.chizography.droid.whosfirst.FingerCircleActivity"
            android:label="@string/homescreen_name" >
        </activity>

        <activity android:name=".AboutActivity" android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <activity android:name=".SettingsActivity"/>
    </application>
</manifest>
