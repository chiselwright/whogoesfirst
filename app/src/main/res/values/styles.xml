<resources xmlns:tools="http://schemas.android.com/tools">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/chooserBackgroundColour</item>
        
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart" tools:targetApi="jelly_bean_mr1">true</item>
		
        <item name="android:textIsSelectable">false</item>
    </style>
    
    <style name="AppPrefsTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/prefsWindowBackground</item>
    </style>

    <style name="AppAboutTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/chooserBackgroundColour</item>
    </style>

</resources>
