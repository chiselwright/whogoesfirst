<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	>

	<ImageView
		android:id="@+id/imageView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentEnd="true"
		android:layout_alignParentRight="true"
		android:layout_alignParentTop="true"
		android:background="@android:color/holo_blue_bright"
		android:contentDescription="@string/todo"
		android:translationZ="10dp"
		app:srcCompat="@drawable/ic_launcher"/>

	<net.chizography.droid.whosfirst.CirclesDrawingView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/chooserBackgroundColour"
		/>

	<TextView
		android:id="@+id/txtTimer"
		android:text="@string/timerValue"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:visibility="visible"
		android:textStyle="normal"
		android:typeface="normal"
		android:textSize="200sp"
		android:gravity="center"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true"
		android:layout_centerInParent="true"
		android:textColor="@color/chooserPrimaryFontColour"
		android:shadowRadius="2"
		android:shadowColor="#000000"
		android:layout_height="match_parent"
		android:layout_width="match_parent"/>

	<TextView
		android:id="@+id/txtToStart"
		android:layout_height="match_parent"
		android:text="@string/toStartHint"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:visibility="visible"
		android:textStyle="bold"
		android:typeface="normal"
		android:gravity="center"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true"
		android:layout_centerInParent="true"
		android:textColor="@color/chooserPrimaryFontColour"
		android:layout_marginLeft="30dp"
		android:layout_marginRight="30dp"
		android:shadowDx="1.2"
		android:shadowDy="1.2"
		android:shadowRadius="2.5"
		android:shadowColor="#CCCCCC"
		android:layout_marginTop="50dp"
		android:layout_marginBottom="50dp"
		android:textIsSelectable="false"
		android:textAlignment="center"
		android:layout_width="match_parent"
		tools:targetApi="jelly_bean_mr1"/>

	<TextView
		android:id="@+id/appVersion"
		android:layout_width="match_parent"
		android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_centerInParent="false"
		android:alpha="0.2"
		android:gravity="bottom|end"
		android:text="@string/x_y_zz"
		android:textAlignment="center"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:textColor="#FFFFFF"
		android:textStyle="normal"
		android:typeface="normal"
		android:visibility="visible"
		tools:targetApi="jelly_bean_mr1"/>

</RelativeLayout>

