<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:id="@+id/aboutappLinearLayout">

    <ImageView
        android:id="@+id/aboutappImageView"
        android:src="@drawable/ic_launcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:minWidth="150dp"
        android:minHeight="150dp"/>

    <TextView
        android:id="@+id/aboutappAppName"
        android:text="@string/app_name"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:textIsSelectable="false"
        android:textStyle="bold"
        android:typeface="normal"
        android:textSize="24sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/aboutappAuthorTitle"
        android:text="by"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:textIsSelectable="false"
        android:textStyle="normal"
        android:typeface="normal"
        android:textSize="16sp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"/>

    <TextView
        android:id="@+id/aboutappAuthorName"
        android:text="Chisel Wright"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:textIsSelectable="false"
        android:textStyle="normal"
        android:typeface="normal"
        android:textSize="18sp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"/>

    <TextView
        android:id="@+id/aboutappAuthorTwitter"
        android:text="\@chizcw"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:textIsSelectable="false"
        android:textStyle="normal"
        android:typeface="normal"
        android:textSize="18sp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"/>
</LinearLayout>


